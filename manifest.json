{
  "manifest_version": 3,
  "name": "SEO & AEO Auditor (Claude)",
  "version": "1.1.0",
  "description": "One-click SEO and Answer Engine Optimization audits using Claude AI with cloud sync",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.anthropic.com/*",
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://cdn.jsdelivr.net; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["shared-view.html", "auth.html"],
      "matches": ["<all_urls>"]
    }
  ]
}

